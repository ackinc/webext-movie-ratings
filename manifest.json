{
  "manifest_version": 3,
  "name": "Sift: IMDB ratings on Indian OTT",
  "description": "Sift adds IMDB ratings next to programs on JioCinema, Hotstar, and SonyLIV, to help you choose what to watch faster.",
  "version": "2.0.2",
  "icons": {
    "16": "images/logo16.png",
    "32": "images/logo32.png",
    "48": "images/logo48.png",
    "128": "images/logo128.png"
  },
  "author": "anirudh.nimmagadda@gmail.com",
  "content_scripts": [
    {
      "js": ["content-script.js"],
      "matches": [
        "https://*.jiocinema.com/*",
        "https://*.hotstar.com/*",
        "https://*.sonyliv.com/*"
      ]
    }
  ],
  "background": {
    "service_worker": "service-worker.js",
    "type": "module"
  },
  "permissions": ["storage"]
}
